FROM julia:1.11-bullseye

# ğŸ”§ Install system dependencies (minimal set for performance)
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    postgresql-client \
    libpq-dev \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# ğŸ“ Set working directory
WORKDIR /app

# ğŸ“‹ Copy Project.toml first (Docker layer caching)
# Note: Manifest.toml will be auto-generated by Julia
COPY core/Project.toml ./

# ğŸ“¦ Install Julia dependencies (Manifest.toml will be auto-generated)
RUN julia --project=. -e '\
    using Pkg; \
    Pkg.instantiate(); \
    Pkg.precompile(); \
    println("âœ… Julia dependencies installed and precompiled!");'

# ğŸ“ Copy all source code
COPY core/ ./

# ğŸŒ Environment variables optimized for Render
ENV HOST=0.0.0.0
ENV PORT=10000
ENV JULIA_DEPOT_PATH=/app/.julia
ENV JULIA_PROJECT=/app
ENV JULIA_THREADS=auto
ENV JULIA_NUM_GC_THREADS=1
ENV GHOST_MODE=production
ENV RENDER=true

# ğŸ©º Health check optimized for Render's requirements
HEALTHCHECK --interval=30s --timeout=10s --start-period=45s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# ğŸ”Œ Expose port
EXPOSE 10000

# ğŸš€ Start Ghost Wallet Hunter
CMD ["julia", "--project=.", "--threads=auto", "src/main.jl"]
